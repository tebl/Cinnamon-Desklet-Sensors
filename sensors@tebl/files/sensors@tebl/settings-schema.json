{
    "layout1": {
        "type": "layout",
        "pages": [ "general", "appearance", "sensors", "tuning" ],
        "general": {
            "type": "page",
            "title": "Desklet",
            "sections": [ "section-general", "section-debugging" ]
        },
        "appearance": {
            "type": "page",
            "title": "Appearance",
            "sections": [ "section-appearance", "section-font", "section-background", "section-border" ]
        },
        "sensors": {
            "type": "page",
            "title": "Sensors",
            "sections": [ "section-sensors" ]
        },
        "tuning": {
            "type": "page",
            "title": "Tuning",
            "sections": [ "section-tuning" ]
        },

        "section-general": {
            "type": "section",
            "title": "Desklet",
            "keys": [ "delay", "show_updated", "show_actual_updated" ]
        },

        "section-debugging": {
            "type": "section",
            "title": "Debugging",
            "keys": [ "enable_debug" ]  
        },

        "section-appearance": {
            "type": "section",
            "title": "Appearance",
            "keys": [ "set_width", "width", "set_height", "height", "hide-decorations", "reserve_status" ]
        },
        "section-font": {
            "type": "section",
            "title": "Font",
            "keys": [ "font", "font-color" ]
        },
        "section-background": {
            "type": "section",
            "title": "Background",
            "keys": [ "background-color", "background-transparency" ]
        },
        "section-border": {
            "type": "section",
            "title": "Border",
            "keys": [ "border-color", "border-width" ]
        },

        "section-sensors": {
            "type": "section",
            "title": "Sensors",
            "keys": [ "sensors_per_row", "sensor_type_per_row" ]
        },

        "section-tuning": {
            "type": "section",
            "title": "Tuning",
            "keys": [ "tuning_about", "read_sensors_expiration" ]
        }
    },

    "delay": {
        "type": "spinbutton",
        "default": 1,
        "min": 1,
        "max": 120,
        "step": 1,
        "description": "Display refresh",
        "tooltip": "Wait specified number of seconds before refreshing display"
    },
    "configuration_delay": {
        "type": "spinbutton",
        "default": 3,
        "min": 0,
        "max": 10,
        "step": 1,
        "description": "Configuration delay",
        "tooltip": "Adds a delay before configuration takes effect, this is in order to avoid firing off costly processes while actively typing"
    },
    "show_updated": {
        "type" : "checkbox",
        "description": "Show last refresh time",
        "default": false
    },
    "show_actual_updated": {
        "type" : "checkbox",
        "description": "Show update time instead",
        "default": false,
        "dependency": "show_updated",
        "tooltip": "Show the timestamp for the last data collection operation instead of last rendering time"
    },
    "enable_debug": {
        "type" : "checkbox",
        "description": "Enable debugging",
        "default": false,
        "tooltip": "Enable Desklet debugging information (available from 'cinnamon-looking-glass')"
    },
    "reserve_status": {
        "type" : "checkbox",
        "description": "Reserve status",
        "default": false,
        "tooltip": "Always reserve space for status - this keeps the desklet from bouncing on the screen"
    },

    "set_width": {
        "type" : "checkbox",
        "description": "Set Desklet width",
        "default": false,
        "tooltip": "Set DeskLet dimensions manually instead of automatic size"
    },
    "width": {
        "type": "spinbutton",
        "default": 600,
        "min": 1,
        "max": 1024,
        "step": 1,
        "description": "Desklet width",
        "tooltip": "Width in pixels",
        "dependency": "set_width"
    },
    "set_height": {
        "type" : "checkbox",
        "description": "Set Desklet height",
        "default": false,
        "tooltip": "Set DeskLet dimensions manually instead of automatic size"
    },
    "height": {
        "type": "spinbutton",
        "default": 300,
        "min": 1,
        "max": 1024,
        "step": 1,
        "description": "Desklet height",
        "tooltip": "Height in pixels",
        "dependency": "set_height"
    },
    "hide-decorations": {
        "type": "checkbox",
        "description": "Hide decorations",
        "default": true
    },

    "sensors_per_row": {
        "type": "spinbutton",
        "default": 2,
        "min": 1,
        "max": 5,
        "step": 1,
        "description": "Sensors per row"
    },
    "sensor_type_per_row": {
        "type" : "checkbox",
        "default": true,
        "description": "Separate sensor types"
    },

    "tuning_about": {
        "type": "label",
        "description": "This page allows you to tune how often certain information elements should be updated, time is specified in number of seconds. Note that the expiration of these will only be evaluated at certain intervals as specified by 'delay' on the first configuration-page."
    },
    "read_sensors_expiration": {
        "type": "spinbutton",
        "default": 10,
        "min": 1,
        "max": 60,
        "step": 1,
        "description": "read_sensors_expiration"
    },

    "font": {
        "type": "fontchooser",
        "default": "Monospace 15",
        "description": "Font"
    },
    "font-color" : {
	    "type": "colorchooser",
	    "default" : "rgb(222,221,218)",
	    "description" : "Font color",
	    "tooltip" : "Font color"
    },

    "background-color": {
        "type": "colorchooser",
        "indent": true,
        "default": "rgb(0,0,0)",
        "description": "Background color",
        "tooltip": "Click to select the background color"
    },
    "background-transparency": {
        "type": "scale",
        "indent": true,
        "default": 0.3,
        "min": 0.0,
        "max": 1.0,
        "step": 0.05,
        "description": "Transparency",
        "tooltip": "Transparency of the desklet"
    },
    
    "border-color": {
        "type": "colorchooser",
        "indent": true,
        "default": "rgb(222,221,218)",
        "description": "Border color",
        "tooltip": "Click to select the border color"
    },
    "border-width": {
        "type": "spinbutton",
        "default": 2,
        "min": 0,
        "max": 200,
        "units": "px",
        "description" : "Border width",
        "step": 1
    }
}
